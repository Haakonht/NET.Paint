<UserControl x:Class="NET.Paint.Resources.Controls.RadialSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="100" Height="100">
    <Canvas x:Name="RootCanvas" Background="Transparent" Width="100" Height="100" IsHitTestVisible="False">
        <!-- Thumb (slider handle) -->
        <Thumb x:Name="SliderThumb"
               Width="20" Height="20" IsHitTestVisible="True"
               Background="{Binding ThumbBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Canvas>
</UserControl>
