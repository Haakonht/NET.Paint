<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ma="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
                    xmlns:selector="clr-namespace:NET.Paint.Selector">

    <DataTemplate x:Key="LineShape">
        <Line X1="0" Y1="0" X2="15" Y2="15" Stroke="Black" StrokeThickness="2"/>
    </DataTemplate>

    <DataTemplate x:Key="CurveShape">
        <Path Stroke="Black" StrokeThickness="2" Fill="Transparent">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="0,0">
                        <QuadraticBezierSegment Point1="15,0" Point2="15,15"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </DataTemplate>

    <DataTemplate x:Key="BezierShape">
        <Canvas Width="100" Height="100">
            <Path Stroke="Black" StrokeThickness="2" Fill="Transparent">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0">
                            <BezierSegment Point1="0,15" Point2="15,0" Point3="15,15"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>
    </DataTemplate>

    <DataTemplate x:Key="EllipseShape">
        <ma:MaterialIcon Kind="EllipseOutline"/>
    </DataTemplate>
    
    <DataTemplate x:Key="CircleShape">
        <ma:MaterialIcon Kind="CircleOutline"/> 
    </DataTemplate>

    <DataTemplate x:Key="TriangleShape">
        <ma:MaterialIcon Kind="TriangleOutline"/>
    </DataTemplate>
    
    <DataTemplate x:Key="RectangleShape">
        <ma:MaterialIcon Kind="RectangleOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="RoundedRectangleShape">
        <Rectangle Stroke="Black" StrokeThickness="2" Fill="Transparent" Width="18" Height="18" RadiusX="3" RadiusY="3"/>
    </DataTemplate>

    <DataTemplate x:Key="SquareShape">
        <ma:MaterialIcon Kind="SquareOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="RoundedSquareShape">
        <ma:MaterialIcon Kind="SquareRoundedOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="PentagonShape">
        <ma:MaterialIcon Kind="PentagonOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="HexagonShape">
        <ma:MaterialIcon Kind="PentagonOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="HeptagonShape">
        <Path Stroke="Black" StrokeThickness="2" Fill="Transparent" Width="18" Height="18">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="9,1" IsClosed="True">
                        <LineSegment Point="15.12,3.48"/>
                        <LineSegment Point="16.90,10.50"/>
                        <LineSegment Point="12.80,16.02"/>
                        <LineSegment Point="5.20,16.02"/>
                        <LineSegment Point="1.10,10.50"/>
                        <LineSegment Point="2.88,3.48"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </DataTemplate>

    <DataTemplate x:Key="OctagonShape">
        <ma:MaterialIcon Kind="PentagonOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="StarShape">
        <ma:MaterialIcon Kind="StarOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="BitmapShape">
        <ma:MaterialIcon Kind="ImageOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="HeartShape">
        <ma:MaterialIcon Kind="HeartOutline"/>
    </DataTemplate>

    <DataTemplate x:Key="ArrowShape">
        <ma:MaterialIcon Kind="ArrowRight"/>
    </DataTemplate>

    <DataTemplate x:Key="SpiralShape">
        <Path Stroke="Black" StrokeThickness="1.5" Fill="Transparent" Stretch="Uniform" Width="18">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="20,10" IsFilled="False">

                        <ArcSegment Point="0,10"
                                Size="5,5"
                                SweepDirection="Counterclockwise"
                                IsLargeArc="True" />
                        <ArcSegment Point="17,10"
                                Size="4.5,4.5"
                                SweepDirection="Counterclockwise"
                                IsLargeArc="True" />
                        <ArcSegment Point="3,10"
                                Size="4,4"
                                SweepDirection="Counterclockwise"
                                IsLargeArc="True" />
                        <ArcSegment Point="14,10"
                                Size="3.5,3.5"
                                SweepDirection="Counterclockwise"
                                IsLargeArc="True" />
                        <ArcSegment Point="6,10"
                                Size="3.5,3.5"
                                SweepDirection="Counterclockwise"
                                IsLargeArc="True" />
                        <ArcSegment Point="11,10"
                                Size="2.5,2.5"
                                SweepDirection="Counterclockwise"
                                IsLargeArc="True" />
                        <ArcSegment Point="8,10"
                                Size="2,2"
                                SweepDirection="Counterclockwise"
                                IsLargeArc="False" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </DataTemplate>

    <DataTemplate x:Key="PencilShape">
        <ma:MaterialIcon Kind="VectorPolyline"/>
    </DataTemplate>

    <DataTemplate x:Key="TextShape">
        <ma:MaterialIcon Kind="FormatTextbox"/>
    </DataTemplate>

    <selector:ShapeIconTemplateSelector x:Key="ShapeSelector" 
                           PencilTemplate="{StaticResource PencilShape}" LineTemplate="{StaticResource LineShape}" CurveTemplate="{StaticResource CurveShape}" BezierTemplate="{StaticResource BezierShape}"  TextTemplate="{StaticResource TextShape}" BitmapTemplate="{StaticResource BitmapShape}"
                           CircleTemplate="{StaticResource CircleShape}"  EllipseTemplate="{StaticResource EllipseShape}" SquareTemplate="{StaticResource SquareShape}" RoundedSquareTemplate="{StaticResource RoundedSquareShape}" RectangleTemplate="{StaticResource RectangleShape}" RoundedRectangleTemplate="{StaticResource RoundedRectangleShape}"
                           PentagonTemplate="{StaticResource PentagonShape}" HexagonTemplate="{StaticResource HexagonShape}" HeptagonTemplate="{StaticResource HeptagonShape}" OctagonTemplate="{StaticResource OctagonShape}"
                           ArrowTemplate="{StaticResource ArrowShape}" HeartTemplate="{StaticResource HeartShape}" SpiralTemplate="{StaticResource SpiralShape}" StarTemplate="{StaticResource StarShape}" TriangleTemplate="{StaticResource TriangleShape}"/>

</ResourceDictionary>