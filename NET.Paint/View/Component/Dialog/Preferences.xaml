<UserControl x:Class="NET.Paint.View.Component.Dialog.Preferences"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:service="clr-namespace:NET.Paint.Drawing.Service;assembly=NET.Paint.Drawing"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="225"
             d:DataContext="{d:DesignInstance Type=service:DesktopViewModel, IsDesignTimeCreatable=True}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="10">
            <TextBlock Text="Application Preferences" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

            <GroupBox Header="Interface" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <CheckBox Content="Show Toolbox" IsChecked="{Binding Preferences.ToolboxVisible}" Margin="0,2"/>
                    <CheckBox Content="Show Overview" IsChecked="{Binding Preferences.OverviewVisible}" Margin="0,2"/>
                    <CheckBox Content="Show Image Dialog" Margin="0,2"/>
                    <CheckBox Content="Show Layer Dialog" Margin="0,2"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="General" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <TextBlock Text="Theme:" Margin="0,2"/>
                    <ComboBox Margin="0,2">
                        <ComboBoxItem Content="Light" IsSelected="True"/>
                        <ComboBoxItem Content="Dark"/>
                    </ComboBox>

                    <TextBlock Text="Auto-save interval (minutes):" Margin="0,5,0,2"/>
                    <Slider Minimum="1" Maximum="30" Value="5" TickFrequency="5" IsSnapToTickEnabled="True" 
                            TickPlacement="BottomRight" Margin="0,2"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Drawing" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <CheckBox Content="Show grid by default" Margin="0,2"/>
                    <CheckBox Content="Show rulers by default" Margin="0,2"/>
                    <CheckBox Content="Snap to grid" Margin="0,2"/>

                    <TextBlock Text="Default canvas size:" Margin="0,5,0,2"/>
                    <ComboBox Margin="0,2">
                        <ComboBoxItem Content="800 x 600" IsSelected="True"/>
                        <ComboBoxItem Content="1024 x 768"/>
                        <ComboBoxItem Content="1920 x 1080"/>
                        <ComboBoxItem Content="Custom"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Reset to Defaults" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Apply" Padding="10,5"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>