<UserControl x:Class="NET.Paint.View.Component.Dialog.Project"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET.Paint.View.Component.Dialog"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:tools="clr-namespace:NET.Paint.View.Component.Tools.Controls"
        mc:Ignorable="d" Height="185" Width="200" >
    <Grid>
        <StackPanel Margin="5">
            <Label Content="Title" FontSize="10" Margin="2,0,0,2" Padding="0"/>
            <Grid>
                <TextBox x:Name="TitleInput" Text="{Binding ProjectTemplate.Title, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <TextBlock Text="Title of the project" Foreground="Gray" Margin="3,0,0,0" VerticalAlignment="Center" x:Name="TitlePlaceholder" IsHitTestVisible="False" Visibility="{Binding ElementName=TitleInput, Path=Text, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter='Invert'}"/>
            </Grid>
            <Label Content="Description" FontSize="10" Margin="2,0,0,2" Padding="0"/>
            <Grid>
                <TextBox x:Name="DescriptionInput" Text="{Binding ProjectTemplate.Description, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" Height="60"/>
                <TextBlock Text="Description of the project" Foreground="Gray" Margin="3,0,0,0"  x:Name="DescriptionPlaceholder" IsHitTestVisible="False" Visibility="{Binding ElementName=DescriptionInput, Path=Text, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter='Invert'}"/>
            </Grid>
            <Label Content="Author" FontSize="10" Margin="2,0,0,2" Padding="0"/>
            <Grid>
                <TextBox x:Name="AuthorInput" Text="{Binding ProjectTemplate.Author, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <TextBlock Text="Creator of the project" Foreground="Gray" Margin="3,0,0,0" VerticalAlignment="Center" x:Name="AuthorPlaceholder" IsHitTestVisible="False" Visibility="{Binding ElementName=AuthorInput, Path=Text, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter='Invert'}"/>
            </Grid>
            <UniformGrid Columns="2" Margin="0,7,0,0">
                <Button Content="Create" Padding="5,0" Height="25" Background="DarkOliveGreen" Foreground="White" Click="Create"/>
                <Button Content="Cancel" Padding="5,0" Height="25" Background="DarkRed" Foreground="White" Click="Cancel"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</UserControl>
