<UserControl x:Class="NET.Paint.View.Component.Overview.Clipboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:NET.Paint.View.Component.Tools.Subcomponent"
             xmlns:utility="clr-namespace:NET.Paint.Drawing.Model.Utility;assembly=NET.Paint.Drawing"
             xmlns:structure="clr-namespace:NET.Paint.Drawing.Model.Structure;assembly=NET.Paint.Drawing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{x:Static utility:XClipboard.Instance}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/Shapes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <ContextMenu x:Key="ClipboardContextMenu">
                <MenuItem Header="Paste" Click="Paste"/>
                <MenuItem Header="Clear" Click="ClearClipboard"/>
            </ContextMenu>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid DataContext="{Binding Clipboard}" ContextMenu="{StaticResource ClipboardContextMenu}">
        <DockPanel LastChildFill="True">
            <fa:IconBlock Icon="Cut" DockPanel.Dock="Right" Margin="0,0,5,0" Visibility="{Binding IsCut, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <ContentControl Content="{Binding Data}" VerticalAlignment="Center" Margin="5,0,0,0">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type structure:XLayer}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <fa:IconBlock Icon="LayerGroup" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type structure:XRenderable}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource ShapeSelector}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Type, Mode=OneWay}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </DockPanel>
    </Grid>
</UserControl>
