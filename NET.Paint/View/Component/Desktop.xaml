<UserControl x:Class="NET.Paint.View.Component.Desktop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ma="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
             xmlns:models="clr-namespace:NET.Paint.Drawing.Model;assembly=NET.Paint.Drawing"
             xmlns:helpers="clr-namespace:NET.Paint.Helper"
             xmlns:service="clr-namespace:NET.Paint.Drawing.Service;assembly=NET.Paint.Drawing"
             xmlns:selectors="clr-namespace:NET.Paint.Selector"
             xmlns:converters="clr-namespace:NET.Paint.Converter"
             xmlns:components="clr-namespace:NET.Paint.View.Component"
             xmlns:toolComponents="clr-namespace:NET.Paint.View.Component.Tools"
             xmlns:dialogComponents="clr-namespace:NET.Paint.View.Component.Dialog"
             xmlns:drawingComponents="clr-namespace:NET.Paint.View.Component.Drawing"
             xmlns:overviewComponents="clr-namespace:NET.Paint.View.Component.Overview"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="UserControl_DataContextChanged"
             d:DataContext="{d:DesignInstance Type=service:XService, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/Anchorables.xaml"/>
                <ResourceDictionary Source="../../Resources/ToolIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate x:Key="Header">
                <TextBlock Text="{Binding Content.Title}" Margin="5,0"/>
            </DataTemplate>

            <DataTemplate x:Key="Title">
                <TextBlock Text="{Binding Content.Title}"/>
            </DataTemplate>

            <DataTemplate x:Key="Editor">
                <drawingComponents:Editor DataContext="{Binding}" MouseRightButtonDown="OpenToolContextQuickSelect"/>
            </DataTemplate>

            <selectors:LayoutTemplateSelector x:Key="LayoutSelector" DocumentTemplate="{StaticResource Editor}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="DimGray">
        <xcad:DockingManager x:Name="DockingManager" Background="#DDFFFFFF" DocumentsSource="{Binding Project.Images}" ActiveContent="{Binding ActiveImage}" ActiveContentChanged="ActiveContentChanged" DocumentHeaderTemplate="{StaticResource Header}" DocumentPaneMenuItemHeaderTemplate="{StaticResource Title}" LayoutItemTemplateSelector="{StaticResource LayoutSelector}">
            <xcad:DockingManager.Resources>
                <Style TargetType="xcad:AnchorablePaneTitle" BasedOn="{StaticResource AnchorablePaneTitleStyle}"/>
            </xcad:DockingManager.Resources>

            <xcad:LayoutRoot>
                <xcad:LayoutPanel Orientation="Vertical">
                    <xcad:LayoutAnchorablePane DockHeight="45">
                        <xcad:LayoutAnchorable Title="Shortcuts" CanDockAsTabbedDocument="False" CanHide="False" CanClose="False" CanAutoHide="False" CanFloat="False" helpers:AnchorableProperties.HideTitle="True">
                            <components:Shortcuts DataContext="{Binding}"/>
                        </xcad:LayoutAnchorable>
                    </xcad:LayoutAnchorablePane>

                    <xcad:LayoutPanel Orientation="Horizontal" DockHeight="*">
                        <xcad:LayoutAnchorablePane DockWidth="41" DockMinWidth="41">
                            <xcad:LayoutAnchorable x:Name="Toolbox" CanFloat="True" CanClose="False" CanHide="False" CanAutoHide="False" Title="Tools" CanDockAsTabbedDocument="False">
                                <toolComponents:ToolBox DataContext="{Binding}"/>
                            </xcad:LayoutAnchorable>
                        </xcad:LayoutAnchorablePane>

                        <xcad:LayoutDocumentPane DockWidth="*"/>

                        <xcad:LayoutAnchorablePaneGroup Orientation="Vertical" DockWidth="225" DockMinWidth="225">
                            <xcad:LayoutAnchorablePane DockHeight="6*" >
                                <xcad:LayoutAnchorable Title="Overview" x:Name="ProjectTreeAnchorable" CanDockAsTabbedDocument="False">
                                    <overviewComponents:ProjectTree DataContext="{Binding}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                            <xcad:LayoutAnchorablePane DockHeight="1.0*">
                                <xcad:LayoutAnchorable Title="Undo" x:Name="UndoAnchorable" CanDockAsTabbedDocument="False">
                                    <overviewComponents:History DataContext="{Binding ActiveImage}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                            <xcad:LayoutAnchorablePane DockHeight="0.5*" DockMinHeight="50">
                                <xcad:LayoutAnchorable Title="Clipboard" x:Name="ClipboardAnchorable" CanDockAsTabbedDocument="False" IsVisible="False">
                                    <overviewComponents:Clipboard DataContext="{Binding}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                            <xcad:LayoutAnchorablePane DockHeight="3*" DockMinHeight="200">
                                <xcad:LayoutAnchorable Title="Properties" x:Name="PropertiesAnchorable" CanDockAsTabbedDocument="False" IsVisible="False">
                                    <overviewComponents:Properties DataContext="{Binding ActiveImage}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                        </xcad:LayoutAnchorablePaneGroup>
                    </xcad:LayoutPanel>

                    <xcad:LayoutAnchorablePane DockHeight="35">
                        <xcad:LayoutAnchorable Title="Status" CanDockAsTabbedDocument="False" CanHide="False" CanClose="False" CanAutoHide="False" CanFloat="False" helpers:AnchorableProperties.HideTitle="True">
                            <components:Status DataContext="{Binding}"/>
                        </xcad:LayoutAnchorable>
                    </xcad:LayoutAnchorablePane>
                </xcad:LayoutPanel>

                <xcad:LayoutRoot.FloatingWindows>
                    <xcad:LayoutAnchorableFloatingWindow>
                        <xcad:LayoutAnchorablePaneGroup>
                            <xcad:LayoutAnchorablePane>
                                <xcad:LayoutAnchorable x:Name="PreferencesAnchorable" Title="Preferences" IsVisible="False"
                                                   CanFloat="True" CanClose="False" CanHide="False" CanAutoHide="False" CanDockAsTabbedDocument="False"
                                                   FloatingHeight="540" FloatingWidth="250">
                                    <dialogComponents:Preferences DataContext="{Binding}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                        </xcad:LayoutAnchorablePaneGroup>
                    </xcad:LayoutAnchorableFloatingWindow>
                </xcad:LayoutRoot.FloatingWindows>
            </xcad:LayoutRoot>
        </xcad:DockingManager>

        <Popup x:Name="ToolContextMenu" StaysOpen="False" AllowsTransparency="True" Placement="MousePoint" HorizontalOffset="100" VerticalOffset="-30">
            <Border BorderBrush="Black" BorderThickness="1" MouseLeave="CloseToolContext">
                <Border.Background>
                    <SolidColorBrush Color="LightGray" Opacity="0.8"/>
                </Border.Background>
                <toolComponents:ToolContext DataContext="{Binding}" x:Name="ToolContext"/>
            </Border>
        </Popup>

        <Popup x:Name="ToolContextQuickSelect" StaysOpen="False" Placement="MousePoint" HorizontalOffset="50" VerticalOffset="-50" AllowsTransparency="True">
            <toolComponents:ToolQuickSelect DataContext="{Binding}" Width="100" Height="100" MouseRightButtonUp="CloseToolContextQuickSelect" MouseLeave="CloseToolContextQuickSelect" OpenToolContextRequested="OnOpenToolContextRequested" OpenSpecificToolContext="OnOpenSpecificToolContext" CloseToolContextRequested="OnCloseToolContextRequested"/>
        </Popup>
    </Grid>
</UserControl>
