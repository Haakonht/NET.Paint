<UserControl x:Class="NET.Paint.View.Component.Desktop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:ma="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
             xmlns:service="clr-namespace:NET.Paint.Drawing.Service;assembly=NET.Paint.Drawing"
             xmlns:selector="clr-namespace:NET.Paint.Selector"
             xmlns:model="clr-namespace:NET.Paint.Drawing.Model;assembly=NET.Paint.Drawing"
             xmlns:converter="clr-namespace:NET.Paint.Converter"
             xmlns:component="clr-namespace:NET.Paint.View.Component"
             xmlns:dialog="clr-namespace:NET.Paint.View.Component.Dialog"
             xmlns:overview="clr-namespace:NET.Paint.View.Component.Overview"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="UserControl_DataContextChanged"
             d:DataContext="{d:DesignInstance Type=service:XService, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Controls/Anchorable.xaml"/>
                <ResourceDictionary Source="../../Resources/Controls/SegmentedCircle.xaml"/>
                <ResourceDictionary Source="../../Resources/ToolIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate x:Key="Header">
                <TextBlock Text="{Binding Content.Title}" Margin="5,0"/>
            </DataTemplate>

            <DataTemplate x:Key="Title">
                <TextBlock Text="{Binding Content.Title}"/>
            </DataTemplate>

            <DataTemplate x:Key="Editor">
                <component:Editor DataContext="{Binding}" MouseRightButtonDown="OpenToolContextQuickSelect"/>
            </DataTemplate>

            <selector:LayoutTemplateSelector x:Key="LayoutSelector" DocumentTemplate="{StaticResource Editor}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <xcad:DockingManager x:Name="DockingManager" DocumentsSource="{Binding Project.Images}" ActiveContent="{Binding ActiveImage}" ActiveContentChanged="ActiveContentChanged" DocumentHeaderTemplate="{StaticResource Header}" DocumentPaneMenuItemHeaderTemplate="{StaticResource Title}" LayoutItemTemplateSelector="{StaticResource LayoutSelector}">
            <xcad:DockingManager.Resources>
                <Style TargetType="xcad:AnchorablePaneTitle" BasedOn="{StaticResource AnchorablePaneTitleStyle}"/>
            </xcad:DockingManager.Resources>

            <xcad:LayoutRoot>
                <xcad:LayoutPanel Orientation="Vertical">
                    <xcad:LayoutAnchorablePane DockHeight="60">
                        <xcad:LayoutAnchorable Title="Shortcuts" CanDockAsTabbedDocument="False">
                            <component:Shortcuts DataContext="{Binding}"/>
                        </xcad:LayoutAnchorable>
                    </xcad:LayoutAnchorablePane>

                    <xcad:LayoutPanel Orientation="Horizontal" DockHeight="*">
                        <xcad:LayoutAnchorablePane DockWidth="41" DockMinWidth="41">
                            <xcad:LayoutAnchorable x:Name="Toolbox" CanFloat="True" CanClose="False" CanHide="False" CanAutoHide="False" Title="Tools" CanDockAsTabbedDocument="False">
                                <component:ToolBox DataContext="{Binding}"/>
                            </xcad:LayoutAnchorable>
                        </xcad:LayoutAnchorablePane>

                        <xcad:LayoutDocumentPane DockWidth="*"/>

                        <xcad:LayoutAnchorablePaneGroup Orientation="Vertical" DockWidth="225" DockMinWidth="225">
                            <xcad:LayoutAnchorablePane DockHeight="6*" >
                                <xcad:LayoutAnchorable Title="Overview" x:Name="ProjectTreeAnchorable" CanDockAsTabbedDocument="False">
                                    <overview:ProjectTree DataContext="{Binding}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                            <xcad:LayoutAnchorablePane DockHeight="1.5*">
                                <xcad:LayoutAnchorable Title="History" x:Name="HistoryAnchorable" CanDockAsTabbedDocument="False">
                                    <overview:History DataContext="{Binding ActiveImage}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                            <xcad:LayoutAnchorablePane DockHeight="0.5*" DockMinHeight="50">
                                <xcad:LayoutAnchorable Title="Clipboard" x:Name="ClipboardAnchorable" CanDockAsTabbedDocument="False" IsVisible="False">
                                    <overview:Clipboard DataContext="{Binding}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                            <xcad:LayoutAnchorablePane DockHeight="2*" DockMinHeight="200">
                                <xcad:LayoutAnchorable Title="Properties" x:Name="PropertiesAnchorable" CanDockAsTabbedDocument="False" IsVisible="False">
                                    <overview:Properties DataContext="{Binding ActiveImage}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                        </xcad:LayoutAnchorablePaneGroup>
                    </xcad:LayoutPanel>

                    <xcad:LayoutAnchorablePane DockHeight="55">
                        <xcad:LayoutAnchorable Title="Status" CanDockAsTabbedDocument="False">
                            <component:Status DataContext="{Binding}"/>
                        </xcad:LayoutAnchorable>
                    </xcad:LayoutAnchorablePane>
                </xcad:LayoutPanel>

                <xcad:LayoutRoot.FloatingWindows>
                    <xcad:LayoutAnchorableFloatingWindow>
                        <xcad:LayoutAnchorablePaneGroup>
                            <xcad:LayoutAnchorablePane>
                                <xcad:LayoutAnchorable x:Name="PreferencesAnchorable" Title="Preferences" IsVisible="False"
                                                   CanFloat="True" CanClose="False" CanHide="False" CanAutoHide="False" CanDockAsTabbedDocument="False"
                                                   FloatingHeight="540" FloatingWidth="250">
                                    <dialog:Preferences DataContext="{Binding}"/>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                        </xcad:LayoutAnchorablePaneGroup>
                    </xcad:LayoutAnchorableFloatingWindow>
                </xcad:LayoutRoot.FloatingWindows>
            </xcad:LayoutRoot>
        </xcad:DockingManager>

        <Popup x:Name="ToolContextMenu" StaysOpen="False" AllowsTransparency="True" Placement="MousePoint" HorizontalOffset="100" VerticalOffset="-30">
            <Border BorderBrush="Black" BorderThickness="1" MouseLeave="CloseToolContext">
                <Border.Background>
                    <SolidColorBrush Color="LightGray" Opacity="0.8"/>
                </Border.Background>
                <component:ToolContext DataContext="{Binding}" x:Name="ToolContext"/>
            </Border>
        </Popup>

        <Popup x:Name="ToolContextQuickSelect" StaysOpen="False" Placement="MousePoint" HorizontalOffset="50" VerticalOffset="-50" AllowsTransparency="True">
            <Canvas Background="Transparent" Width="100" Height="100" MouseLeave="CloseToolContextQuickSelect">
                <Canvas Width="100" Height="100" Canvas.Top="-9.5"  Canvas.Left="34">
                    <Canvas.Resources>
                        <ResourceDictionary Source="../../Resources/Controls/SegmentedCircle.xaml"/>
                    </Canvas.Resources>
                    <Image Canvas.Left="50" Canvas.Top="0" Width="50" MouseEnter="OpenToolContextSpecific" Tag="2" Opacity="0.6" Source="{StaticResource CircleSegment}"/>
                    <Image Canvas.Left="34" Canvas.Top="59" Width="50" MouseEnter="OpenToolContextSpecific" Tag="1" Opacity="0.6" Source="{StaticResource CircleSegment}">
                        <Image.RenderTransform>
                            <RotateTransform Angle="120" CenterX="25" CenterY="25"/>
                        </Image.RenderTransform>
                    </Image>
                    <Image Canvas.Left="-9" Canvas.Top="16" Width="50" MouseEnter="OpenToolContextSpecific" Tag="0" Opacity="0.6" Source="{StaticResource CircleSegment}">
                        <Image.RenderTransform>
                            <RotateTransform Angle="240" CenterX="25" CenterY="25"/>
                        </Image.RenderTransform>
                    </Image>
                    <Canvas.RenderTransform>
                        <RotateTransform Angle="60" CenterX="25" CenterY="25"/>
                    </Canvas.RenderTransform>
                </Canvas>
                <Ellipse Stroke="Black" StrokeThickness="1" Fill="White" Height="40" Width="40" Canvas.Left="30" Canvas.Top="30" MouseRightButtonUp="CloseToolContextQuickSelect"/>
                <ContentPresenter Canvas.Left="38" Canvas.Top="3" Content="{Binding Tools.ActiveTool}" ContentTemplateSelector="{StaticResource ToolIconTemplateSelector}"/>
                <ma:MaterialIcon Canvas.Left="8" Canvas.Top="55" Kind="CircleOutline" FontSize="50"/>
                <ma:MaterialIcon Canvas.Left="68" Canvas.Top="55" Kind="Circle" FontSize="50"/>
            </Canvas>
        </Popup>
    </Grid>
</UserControl>
