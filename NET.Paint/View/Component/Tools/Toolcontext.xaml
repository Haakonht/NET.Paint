<UserControl x:Class="NET.Paint.View.Component.ToolContext"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NET.Paint.View.Component"
             xmlns:service="clr-namespace:NET.Paint.Drawing.Service;assembly=NET.Paint.Drawing"
             xmlns:options="clr-namespace:NET.Paint.Drawing.Constant;assembly=NET.Paint.Drawing"
             xmlns:subComponents="clr-namespace:NET.Paint.View.Component.Tools.Subcomponent"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="235" d:Background="Transparent"
             d:DataContext="{d:DesignInstance Type=service:XService, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/Controls/Expanders.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <TabControl x:Name="TabManager" TabStripPlacement="Left">
        <TabItem>
            <TabItem.Header>
                <TextBlock Text="{Binding Tools.ActiveTool}"/>
            </TabItem.Header>
            <Grid Background="White">
                <subComponents:Custom Width="165" Margin="5"/>
            </Grid>
        </TabItem>
        <TabItem Header="Stroke">
            <Grid Background="White">
                <subComponents:Stroke Width="165" Margin="5"/>
            </Grid>
        </TabItem>
        <TabItem Header="Fill">
            <Grid Background="White">
                <subComponents:Fill Width="165" Margin="5"/>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
