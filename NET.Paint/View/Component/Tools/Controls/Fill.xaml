<UserControl x:Class="NET.Paint.View.Component.Tools.Controls.Fill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:NET.Paint.View.Component.Tools.Controls"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:model="clr-namespace:NET.Paint.Drawing.Model;assembly=NET.Paint.Drawing"
             xmlns:service="clr-namespace:NET.Paint.Drawing.Service;assembly=NET.Paint.Drawing"
             xmlns:fillTypes ="clr-namespace:NET.Paint.Drawing.Model.Utility;assembly=NET.Paint.Drawing"
             xmlns:options="clr-namespace:NET.Paint.Drawing.Constant;assembly=NET.Paint.Drawing"
             xmlns:converters="clr-namespace:NET.Paint.View.Component.Tools.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200" d:Background="White"
             d:DataContext="{d:DesignInstance Type=service:XService, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <converters:ContrastColorConverter x:Key="ContrastColorConverter"/>
    </UserControl.Resources>

    <StackPanel Grid.Row="1" DataContext="{Binding Tools}" Background="White">
        <Label Content="Type" Padding="0" Margin="2,2,0,2" FontSize="10"/>
        <UniformGrid>
            <RadioButton Height="25" Style="{StaticResource {x:Type ToggleButton}}" GroupName="FillTypeSelect" Content="{icons:MaterialIconExt Kind=SquareRounded}" IsChecked="{Binding ActiveFillType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static options:XFillType.Solid}}"/>
            <RadioButton Height="25" Style="{StaticResource {x:Type ToggleButton}}" GroupName="FillTypeSelect" Content="{icons:MaterialIconExt Kind=GradientHorizontal}" IsChecked="{Binding ActiveFillType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static options:XFillType.Gradient}}"/>
        </UniformGrid>
        <ContentPresenter x:Name="SolidGradientPresenter" Content="{Binding Fill}" Margin="0,-25,0,0">
            <ContentPresenter.Resources>
                <DataTemplate DataType="{x:Type fillTypes:XSolidFill}">
                    <StackPanel>
                        <Label Content="Color" Padding="0" Margin="2,0,0,2" FontSize="10"/>
                        <Border BorderThickness="1" BorderBrush="Black">
                            <Grid Height="25">
                                <xctk:ColorPicker x:Name="FillColorPicker" ShowDropDownButton="False" SelectedColor="{Binding Color}" DisplayColorTooltip="False" />
                                <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{Binding Color, Converter={StaticResource ColorToBrushConverter}}" IsHitTestVisible="False"/>
                                <TextBlock Text="{Binding Color}" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" Foreground="{Binding Color, Converter={StaticResource ContrastColorConverter}}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=FillColorPicker}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </StackPanel>
                </DataTemplate>

                <DataTemplate DataType="{x:Type fillTypes:XGradientFill}">
                    <StackPanel>
                        <Label Content="Style" Padding="0" Margin="2,0,0,2" FontSize="10"/>
                        <ComboBox ItemsSource="{x:Static options:XConstants.GradientStyleOptions}" 
                                  SelectedItem="{Binding DataContext.Tools.ActiveGradientStyle, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        <ContentPresenter Content="{Binding}">
                            <ContentPresenter.Resources>
                                <DataTemplate DataType="{x:Type fillTypes:XLinearGradientFill}">
                                    <StackPanel>
                                        <local:LinearGradient DataContext="{Binding DataContext.Tools, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </StackPanel>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type fillTypes:XRadialGradientFill}">
                                    <StackPanel>
                                        <local:RadialGradient DataContext="{Binding DataContext.Tools, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                    </StackPanel>
                </DataTemplate>
            </ContentPresenter.Resources>
        </ContentPresenter>
    </StackPanel>
</UserControl>
