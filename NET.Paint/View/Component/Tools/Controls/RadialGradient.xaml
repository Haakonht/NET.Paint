<UserControl x:Class="NET.Paint.View.Component.Tools.Controls.RadialGradient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:NET.Paint.Resources.Controls"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:NET.Paint.View.Component.Tools.Controls"
             xmlns:tools="clr-namespace:NET.Paint.Drawing.Model;assembly=NET.Paint.Drawing"
             xmlns:service="clr-namespace:NET.Paint.Drawing.Service;assembly=NET.Paint.Drawing"
             xmlns:converter="clr-namespace:NET.Paint.View.Component.Tools.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="165" d:Background="White"
             d:DataContext="{d:DesignInstance Type={x:Type tools:XTools}, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../Resources/Styles/Sliders.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converter:GradientStopCollectionConverter x:Key="GradientStopCollectionConverter"/>

            <ControlTemplate x:Key="GradientStopThumbTemplate" TargetType="{x:Type Thumb}">
                <Grid Background="Transparent">
                    <Popup Width="200" x:Name="ColorCanvasPopup" StaysOpen="False" AllowsTransparency="True" IsOpen="False" Placement="Top" PlacementTarget="{Binding ElementName=GradientStopButton}" HorizontalOffset="18">
                        <local:ColorCanvas SelectedColor="{Binding Color, Mode=TwoWay}" MouseRightButtonDown="Popup_MouseRightButtonDown" MouseMove="Popup_MouseMove" MouseWheel="Popup_MouseWheel"/>
                    </Popup>
                    <Polygon x:Name="GradientStopButton"  Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}" Stroke="Black" StrokeThickness="1" Points="0,0 10,0 10,15 5,20 0,15"/>
                </Grid>
            </ControlTemplate>

            <Style x:Key="GradientStopSliderStyle" TargetType="{x:Type Slider}" BasedOn="{StaticResource SliderNoTrackStyle}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Slider}">
                            <Grid>
                                <Track x:Name="PART_Track" Height="0" Margin="0,20,0,0">
                                    <Track.Thumb>
                                        <Thumb Height="20" Width="10" BorderThickness="0" Margin="0,-20,0,0"
                                                   MouseRightButtonDown="Thumb_MouseRightButtonDown"
                                                   PreviewMouseLeftButtonDown="Thumb_PreviewMouseLeftButtonDown"
                                                   MouseDoubleClick="Thumb_PreviewMouseLeftButtonUp"
                                                   Template="{StaticResource GradientStopThumbTemplate}"/>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel DataContext="{Binding}">
        <Label Content="Radius" Padding="0" Margin="2,2,0,2" FontSize="10"/>
        <Grid>
            <Ellipse x:Name="PreviewEllipse" Width="130" Height="130" Stroke="Black" StrokeThickness="1" Cursor="Hand" MouseLeftButtonDown="PreviewEllipse_MouseLeftButtonDown" MouseRightButtonDown="PreviewEllipse_MouseRightButtonDown" MouseMove="PreviewEllipse_MouseMove">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="{Binding Center}" RadiusX="{Binding Radius}" RadiusY="{Binding Radius}" GradientStops="{Binding GradientStops, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource GradientStopCollectionConverter}}"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="5" Height="5" Fill="White" StrokeThickness="1" Stroke="Black"/>
        </Grid>

        <!-- Use a Grid to overlay the ItemsControl on the PreviewBorder -->
        <StackPanel>
            <Label Content="Gradient Stops" Padding="0" Margin="2,2,0,2" FontSize="10"/>
            <ItemsControl ItemsSource="{Binding GradientStops}" Height="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Slider Minimum="0" Maximum="1" Value="{Binding Offset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsMoveToPointEnabled="False"
                                Style="{StaticResource GradientStopSliderStyle}" Width="165" Height="20" ValueChanged="Slider_ValueChanged" Background="Transparent"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid>
                <TextBlock Text="Click to add stops" FontSize="10" TextAlignment="Center" Padding="0" Margin="0"/>
                <Border x:Name="PreviewBorder" BorderBrush="Black" BorderThickness="1" Height="15" Margin="4,0" VerticalAlignment="Bottom" MouseLeftButtonDown="PreviewBorder_MouseLeftButtonDown">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5" GradientStops="{Binding GradientStops, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource GradientStopCollectionConverter}}"/>
                    </Border.Background>
                </Border>
            </Grid>

        </StackPanel>
    </StackPanel>
</UserControl>
