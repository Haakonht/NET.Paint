<UserControl x:Class="NET.Paint.View.Component.Tools.Controls.LinearGradient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:controls="clr-namespace:NET.Paint.Resources.Controls"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:tools="clr-namespace:NET.Paint.Drawing.Model;assembly=NET.Paint.Drawing"
             xmlns:service="clr-namespace:NET.Paint.Drawing.Service;assembly=NET.Paint.Drawing"
             xmlns:converter="clr-namespace:NET.Paint.View.Component.Tools.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="165" d:Background="White"
             d:DataContext="{d:DesignInstance Type={x:Type tools:XTools}, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <converter:GradientStopCollectionConverter x:Key="GradientStopCollectionConverter"/>

        <!-- Style to make the RepeatButtons (the track) of the Slider transparent and not hit-testable -->
        <Style x:Key="InvisibleSliderTrackRepeatButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Rectangle Fill="Transparent" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Slider Style with an invisible track -->
        <Style x:Key="SliderNoTrackStyle" TargetType="{x:Type Slider}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid>
                            <Track x:Name="PART_Track" Height="0" Margin="0,20,0,0">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource InvisibleSliderTrackRepeatButton}" Command="{x:Static Slider.DecreaseLarge}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource InvisibleSliderTrackRepeatButton}" Command="{x:Static Slider.IncreaseLarge}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Height="20" Width="10" BorderThickness="0" Margin="0,-20,0,0"
                                           MouseRightButtonDown="Thumb_MouseRightButtonDown"
                                           PreviewMouseLeftButtonDown="Thumb_PreviewMouseLeftButtonDown"
                                           MouseDoubleClick="Thumb_PreviewMouseLeftButtonUp">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Grid Background="Transparent">
                                                    <xctk:ColorPicker x:Name="ColorPicker" IsOpen="False" Width="0" Height="0" IsHitTestVisible="False" SelectedColor="{Binding Color, Mode=TwoWay}" SelectedColorChanged="ColorPicker_SelectedColorChanged" />
                                                    <Polygon Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}" Stroke="Black" StrokeThickness="1" Points="0,0 10,0 10,15 5,20 0,15" />
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel DataContext="{Binding Fill}">
        <Label Content="Direction" Padding="0" Margin="2,2,0,2" FontSize="10"/>
        <Grid>
            <Ellipse x:Name="PreviewEllipse" Width="130" Height="130" Stroke="Black" StrokeThickness="1" Cursor="Hand" MouseLeftButtonDown="PreviewEllipse_MouseLeftButtonDown" MouseMove="PreviewEllipse_MouseMove">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="{Binding StartPoint}" EndPoint="{Binding EndPoint}" GradientStops="{Binding GradientStops, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource GradientStopCollectionConverter}}"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="5" Height="5" Fill="White" StrokeThickness="1" Stroke="Black"/>
        </Grid>

        <!-- Use a Grid to overlay the ItemsControl on the PreviewBorder -->
        <StackPanel>
            <Label Content="Gradient Stops" Padding="0" Margin="2,2,0,2" FontSize="10"/>
            <ItemsControl ItemsSource="{Binding GradientStops}" Height="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Slider Minimum="0" Maximum="1" Value="{Binding Offset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsMoveToPointEnabled="False"
                                Style="{StaticResource SliderNoTrackStyle}" Width="165" Height="20" ValueChanged="Slider_ValueChanged" Background="Transparent"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid>
                <TextBlock Text="Click to add stops" FontSize="10" TextAlignment="Center" Padding="0" Margin="0"/>
                <Border x:Name="PreviewBorder" BorderBrush="Black" BorderThickness="1" Height="15" Margin="4,0" VerticalAlignment="Bottom" MouseLeftButtonDown="PreviewBorder_MouseLeftButtonDown">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5" GradientStops="{Binding GradientStops, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource GradientStopCollectionConverter}}"/>
                    </Border.Background>
                </Border>
            </Grid>

        </StackPanel>
    </StackPanel>
</UserControl>
