                    <SolidColorBrush Color="LightGray" Opacity="0.6"/>
                </GeometryDrawing.Brush>
                <GeometryDrawing.Pen>
                    <Pen Brush="Black" />
                </GeometryDrawing.Pen>
                <GeometryDrawing.Geometry>
                    <PathGeometry>
                        <PathFigure StartPoint="50,50" IsClosed="True">
                            <ArcSegment Point="100,0" Size="50,50" SweepDirection="Clockwise" IsLargeArc="False"/>
                            <LineSegment Point="100,50"/>
                            <LineSegment Point="50,50"/>
                        </PathFigure>
                    </PathGeometry>
                </GeometryDrawing.Geometry>
            </GeometryDrawing>
        </DrawingImage.Drawing>
    </DrawingImage>

</ResourceDictionary>