<UserControl x:Class="NET.Paint.View.Component.Tools.Subcomponent.Custom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NET.Paint.View.Component.Tools.Subcomponent"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:options="clr-namespace:NET.Paint.Drawing.Constant;assembly=NET.Paint.Drawing"
             xmlns:service="clr-namespace:NET.Paint.Drawing.Service;assembly=NET.Paint.Drawing"
             xmlns:converter="clr-namespace:NET.Paint.Converter"
             xmlns:tools="clr-namespace:NET.Paint.Drawing.Model;assembly=NET.Paint.Drawing"
             xmlns:selector="clr-namespace:NET.Paint.Selector"
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="220" d:Background="White"
             d:DataContext="{d:DesignInstance Type=service:XService, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../Resources/Shapes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converter:RectangleTypeConverter x:Key="RectangleTypeConverter"/>
            <converter:ValueGreaterThanConverter x:Key="GreaterThanConverter"/>
            <converter:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
            <converter:InvertedBoolenConverter x:Key="InvertedBooleanConverter"/>

            <DataTemplate x:Key="Empty">
                <TextBlock Text="No options available." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
            </DataTemplate>

            <DataTemplate x:Key="SelectorToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Label Content="Selection Mode:" Padding="0" Margin="2,2,0,2"/>
                    <UniformGrid Columns="3" Height="25">
                        <RadioButton Style="{StaticResource {x:Type ToggleButton}}" IsChecked="{Binding Tools.SelectionMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static options:SelectionMode.Single}}" Content="{fa:Icon DotCircle}" GroupName="SelectorMode"/>
                        <RadioButton Style="{StaticResource {x:Type ToggleButton}}" IsChecked="{Binding Tools.SelectionMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static options:SelectionMode.Rectangle}}" Content="{fa:Icon Square}" GroupName="SelectorMode"/>
                        <RadioButton Style="{StaticResource {x:Type ToggleButton}}" IsChecked="{Binding Tools.SelectionMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static options:SelectionMode.Lasso}}" Content="{fa:Icon DrawPolygon}" GroupName="SelectorMode"/>
                    </UniformGrid>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="StarToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Grid Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="DimGray" Background="White" BorderThickness="1" Grid.Column="1" Grid.Row="1">
                            <ContentPresenter Content="{Binding StarPreview.Shape, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <ResourceDictionary Source="../../../../Resources/Renderer.xaml"/>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                    </Grid>
                    <Label Content="Points" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Value="{Binding Tools.StarPoints}" Minimum="5" Maximum="15" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="StarPreviewChanged" Margin="5,0,0,0"/>
                        <TextBlock Text="{Binding Tools.StarPoints}" Width="20" Margin="5,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                    <Label Content="Inner Radius" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Value="{Binding Tools.StarInnerRadiusRatio}" Minimum="0.1" Maximum="1.0" TickFrequency="0.1" ValueChanged="StarPreviewChanged" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Tools.StarInnerRadiusRatio}" Width="20" Margin="5,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>

                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="ArrowToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Grid Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="DimGray" Background="White" BorderThickness="1" Grid.Column="1" Grid.Row="1">
                            <ContentPresenter Content="{Binding ArrowPreview.Shape, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <ResourceDictionary Source="../../../../Resources/Renderer.xaml"/>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                    </Grid>
                    <Label Content="Head Length" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Orientation="Horizontal" Grid.Column="0" Value="{Binding Tools.HeadLength}" Minimum="5" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="ArrowPreviewChanged" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Tools.HeadLength}" Width="20" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                    <Label Content="Head Width" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Orientation="Horizontal" Grid.Column="0" Value="{Binding Tools.HeadWidth}" Minimum="5" Maximum="50" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="ArrowPreviewChanged" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Tools.HeadWidth}" Width="20" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                    <Label Content="Tail Width" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Orientation="Horizontal" Grid.Column="0" Value="{Binding Tools.TailWidth}" Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="ArrowPreviewChanged"  Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Tools.TailWidth}" Width="20" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="PencilToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <UniformGrid Rows="1">
                        <RadioButton Height="25" IsChecked="{Binding Tools.IsPolylineAdd, Mode=TwoWay}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="PencilSelect">
                            <RadioButton.Content>
                                <icons:PackIconMaterial Kind="VectorPolylinePlus"/>
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton Height="25" IsChecked="{Binding Tools.IsPolylineAdd, Converter={StaticResource InvertedBooleanConverter},Mode=TwoWay}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="PencilSelect">
                            <RadioButton.Content>
                                <icons:PackIconMaterial Kind="VectorPolylineMinus"/>
                            </RadioButton.Content>
                        </RadioButton>
                    </UniformGrid>
                    <StackPanel>
                        <Label Content="Spacing:" Padding="0" Margin="2,2,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Slider Value="{Binding Tools.Spacing}" Minimum="5" Maximum="50" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            <TextBlock Text="{Binding Tools.Spacing}" Width="20" Margin="5,0,0,0" Grid.Column="1" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="TextToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Label Content="Font / Size:" Padding="0" Margin="2,2,0,2"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" ItemsSource="{x:Static options:XConstants.FontFamilyOptions}" SelectedValue="{Binding Tools.FontFamily, Mode=TwoWay}" Height="25"/>
                        <ComboBox Grid.Column="1" ItemsSource="{x:Static options:XConstants.FontSizeOptions}" SelectedValue="{Binding Tools.FontSize, Mode=TwoWay}" Height="25"/>
                    </Grid>
                    <Label Content="Style:" Padding="0" Margin="2,2,0,2"/>
                    <UniformGrid Rows="1" Height="25">
                        <ToggleButton Content="{fa:Icon Bold}" IsChecked="{Binding Tools.IsBold}"/>
                        <ToggleButton Content="{fa:Icon Italic}" IsChecked="{Binding Tools.IsItalic}"/>
                        <ToggleButton Content="{fa:Icon Underline}" IsChecked="{Binding Tools.IsUnderline}"/>
                        <ToggleButton Content="{fa:Icon Strikethrough}" IsChecked="{Binding Tools.IsStrikethrough}"/>
                         <!--
                        <RadioButton Content="{fa:Icon AlignLeft}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="TextAlignment" IsChecked="{Binding TextAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Left, Mode=TwoWay}" Width="25"/>
                        <RadioButton Content="{fa:Icon AlignCenter}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="TextAlignment" IsChecked="{Binding TextAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Center, Mode=TwoWay}" Width="25"/>
                        <RadioButton Content="{fa:Icon AlignRight}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="TextAlignment" IsChecked="{Binding TextAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Right, Mode=TwoWay}" Width="25"/>
                        <RadioButton Content="{fa:Icon AlignJustify}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="TextAlignment" IsChecked="{Binding TextAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Justify, Mode=TwoWay}" Width="25"/>
                        -->
                    </UniformGrid>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="SpiralToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Grid Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="DimGray" Background="White" BorderThickness="1" Grid.Column="1" Grid.Row="1">
                            <ContentPresenter Content="{Binding SpiralPreview.Shape, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <ResourceDictionary Source="../../../../Resources/Renderer.xaml"/>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                    </Grid>
                    <Label Content="Turns" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Orientation="Horizontal" Grid.Column="0" Value="{Binding Tools.Turns}" Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="SpiralPreviewChanged" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Tools.Turns}" Width="20" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                    <Label Content="Samples" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Orientation="Horizontal" Grid.Column="0" Value="{Binding Tools.SpiralSamples}" Minimum="10" Maximum="150" TickFrequency="5" IsSnapToTickEnabled="True" ValueChanged="SpiralPreviewChanged" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Tools.SpiralSamples}" Width="20" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="HeartToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Grid Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="DimGray" Background="White" BorderThickness="1" Grid.Column="1" Grid.Row="1">
                            <ContentPresenter Content="{Binding HeartPreview.Shape, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <ResourceDictionary Source="../../../../Resources/Renderer.xaml"/>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                    </Grid>
                    <Label Content="Samples" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Orientation="Horizontal" Grid.Column="0" Value="{Binding Tools.HeartSamples}" Minimum="12" Maximum="64" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="HeartPreviewChanged" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Tools.HeartSamples}" Width="20" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="RegularToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Grid Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="DimGray" Background="White" BorderThickness="1" Grid.Row="1">
                            <ContentPresenter Content="{Binding RegularPreview.Shape, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <ResourceDictionary Source="../../../../Resources/Renderer.xaml"/>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                    </Grid>
                    <Label Content="Corners" Padding="0" Margin="2,2,0,2" FontSize="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider Orientation="Horizontal" Grid.Column="0" Value="{Binding Tools.PolygonCorners}" Minimum="5" Maximum="16" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="RegularPreviewchanged" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Tools.PolygonCorners}" Width="20" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="RectangleToolTemplate">
                <StackPanel>
                    <UniformGrid Rows="1">
                        <RadioButton Height="25" ContentTemplate="{StaticResource RectangleShape}" IsChecked="{Binding Tools.Radius, Converter={StaticResource RectangleTypeConverter}, ConverterParameter=Regular, Mode=TwoWay}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="RectangleSelect"/>
                        <RadioButton Height="25" ContentTemplate="{StaticResource RoundedRectangleShape}" IsChecked="{Binding Tools.Radius, Converter={StaticResource RectangleTypeConverter}, ConverterParameter=Inverted, Mode=TwoWay}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="RectangleSelect"/>
                    </UniformGrid>
                    <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}" Visibility="{Binding Tools.Radius, Converter={StaticResource GreaterThanConverter}, ConverterParameter=1}">
                        <Label Content="Radius:" Padding="0" Margin="2,10,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Slider Value="{Binding Tools.Radius}" Minimum="0" Maximum="50" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            <TextBlock Text="{Binding Tools.Radius}" Width="20" Margin="5,0,0,0" Grid.Column="1" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>

            </DataTemplate>

            <DataTemplate x:Key="EllipseToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Label Content="Type:" Padding="0" Margin="2,0,0,2"/>
                    <UniformGrid Rows="1">
                        <RadioButton Height="25" ContentTemplate="{StaticResource EllipseShape}" IsChecked="{Binding Tools.IsCircle, Mode=TwoWay}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="EllipseSelect"/>
                        <RadioButton Height="25" ContentTemplate="{StaticResource CircleShape}" IsChecked="{Binding Tools.IsCircle, Converter={StaticResource InvertedBooleanConverter},Mode=TwoWay}" Style="{StaticResource {x:Type ToggleButton}}" GroupName="EllipseSelect"/>
                    </UniformGrid>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="BitmapToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <Label Content="Bitmap Scaling:" Padding="0" Margin="2,0,0,2"/>
                    <UniformGrid Columns="3" Height="25">
                        <RadioButton Style="{StaticResource {x:Type ToggleButton}}" IsChecked="{Binding Tools.BitmapScaling, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static options:ImageScaling.Original}}" Content="{fa:Icon Compress}" GroupName="SelectorMode"/>
                        <RadioButton Style="{StaticResource {x:Type ToggleButton}}" IsChecked="{Binding Tools.BitmapScaling, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static options:ImageScaling.Fit}}" Content="{fa:Icon Expand}" GroupName="SelectorMode"/>
                        <RadioButton Style="{StaticResource {x:Type ToggleButton}}" IsChecked="{Binding Tools.BitmapScaling, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static options:ImageScaling.Clip}}" Content="{fa:Icon CropSimple}" GroupName="SelectorMode"/>
                    </UniformGrid>
                    <Label Content="Gallery:" Padding="0" Margin="2,0,0,2"/>
                    <Border BorderBrush="LightGray" BorderThickness="1">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Height="200" Margin="0,5,0,0">
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding Project.Bitmaps}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <Button Click="SelectBitmap">
                                                    <Image Source="{Binding}" Width="200" ClipToBounds="False" Margin="0,0,5,0"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Content="Add Image" Margin="5"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </DataTemplate>

            <selector:PolygonSelector x:Key="PolygonSelector" RegularTemplate="{StaticResource RegularToolTemplate}"  StarTemplate="{StaticResource StarToolTemplate}" HeartTemplate="{StaticResource HeartToolTemplate}" ArrowTemplate="{StaticResource ArrowToolTemplate}" SpiralTemplate="{StaticResource SpiralToolTemplate}" EmptyTemplate="{StaticResource Empty}"/>

            <DataTemplate x:Key="PolygonToolTemplate">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=DataContext}">
                    <ComboBox SelectedValue="{Binding Tools.ActivePolygon}" SelectedValuePath="Tag" Height="25">
                        <ComboBoxItem Height="25" Tag="{x:Static options:PolygonType.Regular}">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <ContentPresenter ContentTemplate="{StaticResource PentagonShape}" Margin="5,0,0,0"/>
                                    <TextBlock Text="Regular" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Height="25" Tag="{x:Static options:PolygonType.Star}">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <ContentPresenter ContentTemplate="{StaticResource StarShape}" Margin="5,0,0,0"/>
                                    <TextBlock Text="Star" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Height="25" Tag="{x:Static options:PolygonType.Heart}">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <ContentPresenter ContentTemplate="{StaticResource HeartShape}" Margin="5,0,0,0"/>
                                    <TextBlock Text="Heart" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Height="25" Tag="{x:Static options:PolygonType.Arrow}">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <ContentPresenter ContentTemplate="{StaticResource ArrowShape}" Margin="5,0,0,0"/>
                                    <TextBlock Text="Arrow" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Height="25" Tag="{x:Static options:PolygonType.Spiral}">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <ContentPresenter ContentTemplate="{StaticResource SpiralShape}" Margin="5,0,0,0"/>
                                    <TextBlock Text="Spiral" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                    </ComboBox>
                    <ContentControl Content="{Binding Tools.ActivePolygon}" ContentTemplateSelector="{StaticResource PolygonSelector}"/>
                </StackPanel>
            </DataTemplate>

            <selector:IconSelector x:Key="ToolSelector" 
                                   SelectorTemplate="{StaticResource SelectorToolTemplate}" TextTemplate="{StaticResource TextToolTemplate}" PencilTemplate="{StaticResource PencilToolTemplate}" 
                                   LineTemplate="{StaticResource Empty}" BezierTemplate="{StaticResource Empty}" CurveTemplate="{StaticResource Empty}"
                                   EllipseTemplate="{StaticResource EllipseToolTemplate}" TriangleTemplate="{StaticResource Empty}" RectangleTemplate="{StaticResource RectangleToolTemplate}"
                                   PolygonTemplate="{StaticResource PolygonToolTemplate}" BitmapTemplate="{StaticResource BitmapToolTemplate}" PointerTemplate="{StaticResource Empty}" />
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <ContentControl Content="{Binding Tools.ActiveTool}" ContentTemplateSelector="{StaticResource ToolSelector}"/>
    </Grid>
</UserControl>
