<UserControl x:Class="NET.Paint.View.Component.Properties.Controls.PointEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NET.Paint.View.Component.Properties.Controls"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" d:Background="White">
    <Grid DataContext="{Binding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="DimGray" BorderThickness="1,1,0,1" Grid.Column="0">
            <icons:MaterialIcon Kind="AlphaXBoxOutline" Foreground="DimGray"/>
        </Border>
        <Border BorderBrush="DimGray" BorderThickness="0,1,1,1" Grid.Column="1">
            <TextBox Text="{Binding X, UpdateSourceTrigger=LostFocus}" TextAlignment="Center" VerticalAlignment="Center" BorderBrush="Transparent" PreviewTextInput="NumberValidationTextBox"/>
        </Border>
        <Border BorderBrush="DimGray" BorderThickness="1,1,0,1" Grid.Column="2">
            <icons:MaterialIcon Kind="AlphaYBoxOutline" Foreground="DimGray"/>
        </Border>
        <Border BorderBrush="DimGray" BorderThickness="0,1,1,1" Grid.Column="3">
            <TextBox Text="{Binding Y, UpdateSourceTrigger=LostFocus}" TextAlignment="Center" VerticalAlignment="Center" BorderBrush="Transparent" PreviewTextInput="NumberValidationTextBox"/>
        </Border>
    </Grid>
</UserControl>
