<UserControl x:Class="NET.Paint.View.Component.Properties.PropertyGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:shapes="clr-namespace:NET.Paint.Drawing.Model.Shape;assembly=NET.Paint.Drawing"
             xmlns:controls="clr-namespace:NET.Paint.View.Component.Properties.Controls"
             xmlns:selectors="clr-namespace:NET.Paint.Selector"
             xmlns:converters="clr-namespace:NET.Paint.View.Component.Property.Converters"
             xmlns:drawingConverters="clr-namespace:NET.Paint.View.Component.Drawing.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="210" d:Background="White"
             d:DataContext="{d:DesignInstance Type={x:Type shapes:XText}, IsDesignTimeCreatable=True}">
             
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/Styles/Expanders.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:ObjectToPropertyInfoConverter x:Key="ObjectToPropertyInfoConverter"/>
            <drawingConverters:XColorToBrushConverter x:Key="XColorToBrushConverter"/>

            <!-- Editor templates -->
            <DataTemplate x:Key="BoolTemplate">
                <Border BorderBrush="DimGray" BorderThickness="1">
                    <CheckBox IsChecked="{Binding Value}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="StringTemplate">
                <Border BorderBrush="DimGray" BorderThickness="1">
                    <TextBox Text="{Binding Value}" VerticalAlignment="Center" BorderBrush="Transparent" FontSize="11"/>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="ColorTemplate">
                <Grid>
                    <ToggleButton x:Name="ColorBtn" 
                                  Background="{Binding Value, Converter={StaticResource XColorToBrushConverter}}" 
                                  BorderBrush="DimGray" 
                                  BorderThickness="1" 
                                  IsChecked="False"/>

                    <Popup Width="200" Height="250" 
                           Placement="Top" 
                           StaysOpen="False" 
                           PlacementTarget="{Binding ElementName=ColorBtn}" 
                           IsOpen="{Binding ElementName=ColorBtn, Path=IsChecked}">
                        <controls:ColorEditor Margin="0,22,0,0" 
                                            DataContext="{Binding Value}" 
                                            VerticalAlignment="Center"/>
                    </Popup>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="PointTemplate">
                <TextBlock Text="{Binding Value}" VerticalAlignment="Center"/>
            </DataTemplate>

            <DataTemplate x:Key="PointCollectionTemplate">
            </DataTemplate>

            <DataTemplate x:Key="NumberTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="{icons:MaterialIconExt Kind=Decrement}" Grid.Column="0" Height="20"/>
                    <Border BorderBrush="DimGray" BorderThickness="1" Grid.Column="1">
                        <TextBox Text="{Binding Value}" Grid.Column="1" TextAlignment="Center" VerticalAlignment="Center" BorderBrush="Transparent"/>
                    </Border>
                    <Button Content="{icons:MaterialIconExt Kind=Increment}" Grid.Column="2" Height="20"/>
                </Grid>
            </DataTemplate>

            <selectors:PropertyEditorTemplateSelector x:Key="PropertyEditorTemplateSelector" 
                                                  StringTemplate="{StaticResource StringTemplate}" 
                                                  ColorTemplate="{StaticResource ColorTemplate}" 
                                                  BooleanTemplate="{StaticResource BoolTemplate}" 
                                                  PointTemplate="{StaticResource PointTemplate}"
                                                  NumberTemplate="{StaticResource NumberTemplate}"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <Grid Background="DimGray" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Type, Mode=OneWay}" Foreground="White" FontWeight="Bold" Grid.Column="0" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Id, Mode=OneWay}" Foreground="White" FontWeight="Light" TextTrimming="WordEllipsis" Margin="15,0,0,0" Grid.Column="1" VerticalAlignment="Center"/>
        </Grid>
        
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <!-- Category Groups -->
            <ItemsControl ItemsSource="{Binding Path=., Converter={StaticResource ObjectToPropertyInfoConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Style="{StaticResource CategoryExpanderStyle}" IsExpanded="True">
                            <!-- Category Header -->
                            <Expander.Header>
                                <TextBlock Text="{Binding CategoryName}" FontWeight="Bold" Foreground="White" 
                                          Margin="5,2" FontSize="11"/>
                            </Expander.Header>
                            
                            <!-- Properties in this category -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Property Names Column -->
                                <ItemsControl Grid.Column="0" ItemsSource="{Binding Properties}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="DimGray" BorderThickness="1" Height="20" Background="White">
                                                <TextBlock Text="{Binding DisplayName, Mode=OneWay}" VerticalAlignment="Center" IsEnabled="False" Margin="5,0,0,0" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- GridSplitter -->
                                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray"/>

                                <!-- Property Values Column -->
                                <ItemsControl Grid.Column="2" ItemsSource="{Binding Properties}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Height="20" Background="Transparent">
                                                <ContentControl Content="{Binding}"
                                                          IsEnabled="{Binding CanWrite}"
                                                          ContentTemplateSelector="{StaticResource PropertyEditorTemplateSelector}" 
                                                          VerticalAlignment="Stretch" 
                                                          HorizontalAlignment="Stretch"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>
