<UserControl x:Class="NET.Paint.View.Component.Properties.PropertyGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:shapes="clr-namespace:NET.Paint.Drawing.Model.Shape;assembly=NET.Paint.Drawing"
             xmlns:controls="clr-namespace:NET.Paint.View.Component.Properties.Controls"
             xmlns:constants="clr-namespace:NET.Paint.Drawing.Constant;assembly=NET.Paint.Drawing"
             xmlns:selectors="clr-namespace:NET.Paint.Selector"
             xmlns:converters="clr-namespace:NET.Paint.View.Component.Properties.Converters"
             xmlns:drawingConverters="clr-namespace:NET.Paint.View.Component.Drawing.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="210" d:Background="White"
             d:DataContext="{d:DesignInstance Type={x:Type shapes:XEllipse}, IsDesignTimeCreatable=True}">
             
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/Styles/Expanders.xaml"/>
                <ResourceDictionary Source="../../../Resources/Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:ObjectToPropertyInfoConverter x:Key="ObjectToPropertyInfoConverter"/>
            <drawingConverters:XColorToBrushConverter x:Key="XColorToBrushConverter"/>
            <converters:DashArrayToStrokeStyleConverter x:Key="DashArrayToStrokeStyleConverter"/>

            <!-- Editor templates -->
            <DataTemplate x:Key="BoolTemplate">
                <Border BorderBrush="DimGray" BorderThickness="1">
                    <CheckBox IsChecked="{Binding Value}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="StringTemplate">
                <Border BorderBrush="DimGray" BorderThickness="1">
                    <TextBox Text="{Binding Value}" VerticalAlignment="Center" BorderBrush="Transparent" FontSize="11"/>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="ColorTemplate">
                <Grid>
                    <ToggleButton x:Name="ColorBtn" Background="{Binding Value, Converter={StaticResource XColorToBrushConverter}, Mode=TwoWay}" BorderBrush="DimGray" BorderThickness="1" IsChecked="False" Style="{StaticResource ToggleBtnNoCheckedStyle}"/>

                    <Popup Width="200" Height="250"  Placement="Top" StaysOpen="False" PlacementTarget="{Binding ElementName=ColorBtn}" IsOpen="{Binding ElementName=ColorBtn, Path=IsChecked}">
                        <controls:ColorEditor Margin="0,22,0,0" XColorValue="{Binding Value, Mode=TwoWay}" VerticalAlignment="Center"/>
                    </Popup>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="PointTemplate">
                <TextBlock Text="{Binding Value}" VerticalAlignment="Center"/>
            </DataTemplate>

            <DataTemplate x:Key="PointCollectionTemplate">
                <ComboBox ItemsSource="{Binding Value}" SelectedIndex="0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="5,1,0,0" VerticalAlignment="Center" FontSize="11">
                                [X: <Run Text="{Binding X}"/>, Y: <Run Text="{Binding Y}"/>]
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DataTemplate>

            <DataTemplate x:Key="StrokeStyleTemplate">
                <ComboBox ItemsSource="{x:Static constants:XOptions.StrokeStyleOptions}" SelectedItem="{Binding Value, Converter={StaticResource DashArrayToStrokeStyleConverter}, Mode=TwoWay}" Padding="0" VerticalContentAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="5,1,0,0" VerticalAlignment="Center" FontSize="11"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DataTemplate>

            <DataTemplate x:Key="FontTemplate">
                <ComboBox ItemsSource="{x:Static constants:XOptions.FontFamilyOptions}" SelectedItem="{Binding Value, Mode=TwoWay}" Padding="0" VerticalContentAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="{Binding}" Margin="5,1,0,0" VerticalAlignment="Center" FontSize="11"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DataTemplate>
            
            <DataTemplate x:Key="NumberTemplate">
                <controls:NumberEditor DataContext="{Binding}"/>
            </DataTemplate>

            <selectors:PropertyEditorTemplateSelector x:Key="PropertyEditorTemplateSelector" 
                        StringTemplate="{StaticResource StringTemplate}" ColorTemplate="{StaticResource ColorTemplate}" BooleanTemplate="{StaticResource BoolTemplate}" 
                        PointTemplate="{StaticResource PointTemplate}" NumberTemplate="{StaticResource NumberTemplate}" FontTemplate="{StaticResource FontTemplate}"
                        StrokeStyleTemplate="{StaticResource StrokeStyleTemplate}"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <Grid Background="DimGray" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Type, Mode=OneWay}" Foreground="White" FontWeight="Bold" Grid.Column="0" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Id, Mode=OneWay}" Foreground="White" FontWeight="Light" TextTrimming="WordEllipsis" Margin="15,0,0,0" Grid.Column="1" VerticalAlignment="Center"/>
        </Grid>
        
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <!-- Category Groups -->
            <ItemsControl ItemsSource="{Binding Path=., Converter={StaticResource ObjectToPropertyInfoConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Style="{StaticResource CategoryExpanderStyle}" IsExpanded="True">
                            <!-- Category Header -->
                            <Expander.Header>
                                <TextBlock Text="{Binding CategoryName}" FontWeight="Bold" Foreground="White" Margin="5,2" FontSize="11"/>
                            </Expander.Header>
                            
                            <!-- Properties in this category -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Property Names Column -->
                                <ItemsControl Grid.Column="0" ItemsSource="{Binding Properties}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="DimGray" BorderThickness="1" Height="20" Background="White">
                                                <TextBlock Text="{Binding DisplayName, Mode=OneWay}" VerticalAlignment="Center" IsEnabled="False" Margin="5,0,0,0" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- GridSplitter -->
                                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray"/>

                                <!-- Property Values Column -->
                                <ItemsControl Grid.Column="2" ItemsSource="{Binding Properties}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Height="20" Background="Transparent">
                                                <ContentControl Content="{Binding}" IsEnabled="{Binding CanWrite}" ContentTemplateSelector="{StaticResource PropertyEditorTemplateSelector}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>
