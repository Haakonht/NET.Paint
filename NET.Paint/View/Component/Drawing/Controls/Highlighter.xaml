<UserControl x:Class="NET.Paint.View.Component.Drawing.Controls.Highlighter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:structure="clr-namespace:NET.Paint.Drawing.Model.Structure;assembly=NET.Paint.Drawing"
             xmlns:interfaces="clr-namespace:NET.Paint.Drawing.Interface;assembly=NET.Paint.Drawing"
             xmlns:converters="clr-namespace:NET.Paint.View.Component.Drawing.Converters">
    <UserControl.Resources>
        <DataTemplate x:Key="RotateThumb">
            <Thumb Margin="-7,-7,0,0" Cursor="Hand" 
                   DragDelta="RotateThumb_DragDelta" 
                   DragStarted="RotateThumb_DragStarted"
                   DragCompleted="RotateThumb_DragCompleted"
                   MouseEnter="RotateThumb_MouseEnter"
                   MouseLeave="Thumb_MouseLeave">
                <Thumb.Template>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse Fill="Red" StrokeThickness="1" Stroke="Black" Width="14" Height="14"/>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
        </DataTemplate>
      
    </UserControl.Resources>
    <Canvas>
        <ContentPresenter Content="{Binding}">
            <ContentPresenter.Resources>
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type structure:XImage}">
                        <Label Background="Transparent" IsHitTestVisible="False"/>
                    </DataTemplate>
                    
                    <DataTemplate DataType="{x:Type structure:XLayer}">
                        <Label Background="Transparent" IsHitTestVisible="False"/>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type structure:XRenderable}">
                        <ContentPresenter Content="{Binding}">
                            <ContentPresenter.Resources>
                                <ResourceDictionary Source="../Resources/Preview.xaml"/>
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                    </DataTemplate>
                </ResourceDictionary>
            </ContentPresenter.Resources>
        </ContentPresenter>
        
        <!-- Rotation guide line (only visible during rotation) -->
        <Line x:Name="RotationGuideLine" 
              Stroke="Red" 
              StrokeThickness="2" 
              StrokeDashArray="3,3"
              Visibility="Collapsed"
              IsHitTestVisible="False" />
        
        <ItemsControl ItemsSource="{Binding Points, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas>
                        <Canvas.RenderTransform>
                            <RotateTransform Angle="{Binding Rotation}" CenterX="{Binding Center.X}" CenterY="{Binding Center.Y}"/>
                        </Canvas.RenderTransform>
                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Thumb Width="12" Height="12" Background="White" BorderBrush="Black" BorderThickness="1"
                           Margin="-6,-6,0,0" Cursor="SizeAll"
                           DragDelta="Thumb_DragDelta" 
                           MouseEnter="Thumb_MouseEnter"
                           MouseLeave="Thumb_MouseLeave"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ContentControl ContentTemplate="{StaticResource RotateThumb}" Canvas.Top="{Binding Center.Y}" Canvas.Left="{Binding Center.X}"/>
    </Canvas>
</UserControl>
